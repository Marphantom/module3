@model BMIResult
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index" method="post">
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" value="@Model.Weight" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Height"></label>
            <input asp-for="Height" class="form-control" value="@Model.Height" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Result"></label>
            <input asp-for="Result" class="form-control" readonly value="@Model.Result" />
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-danger">BMI</button>
    </div>
</form>